<div class="header">
  <h1>New Game</h1>
</div>
<div class="letters">
<% @letters.each do |letter| %>
<div class="letter">
  <h3><%= letter %></h3>
  </div>
<% end %>
</div>
<div class="form">
<form action="/score" method="post">
<input type="text" name="word">
<input type="submit" value="Play">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
</form>

</div>